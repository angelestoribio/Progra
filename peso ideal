#include "stdafx.h"
#include <stdio.h>
#include <conio.h>

void main()
{int sexo,continuar;
 float altura,pesoideal;

 printf("\t********PESO IDEAL*********");

 do
 {
   printf(" \n\nSI ES MUJER PRECIONE 1:\n \nSI ES HOMBRE PRECIONE 2:\n");
 scanf("%d",&sexo);
 
  if(sexo <= 1)
  {printf("\n\nPORFAVOR INGRESE SU ALTURA: ");
   scanf("%f",&altura);
   pesoideal=62.1*altura-44.7;
   printf("\n\n\t****SU PESO IDEAL ES %f ****",pesoideal);
  }
  else
  {printf("\n\nPORFAVOR INGRESE SU ALTURA: ");
   scanf("%f",&altura);
   pesoideal=72.7*altura-58;
   printf("\n\n\t****SU PESO IDEAL ES %f ****",pesoideal);
  }
  printf("\n\nSI DESEA SACAR OTRO PESO PRECIONE 1: ");
  scanf("%d",&continuar);
 }while(continuar==1);
	getch();
}
